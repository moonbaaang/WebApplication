<script type="text/javascript">
$(document).ready(function(){
		if($("input[type=text]").val().length == 0){
			alert("아이디는 필수항목입니다.")
	} else{
		$("form").attr("action", "login");
		$("form").attr("method", "get");
	}
}); //ready end
</script>
